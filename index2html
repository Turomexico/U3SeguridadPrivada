        document.addEventListener('DOMContentLoaded', function() {
            setDefaultDates();
            setupEventListeners();
            startSlideshow();
            setupWhatsAppModal();
            setupFIFAModal();
            initReviewsGrid();
            initAttractionCards();
            initChatbot();
            
            // Suavizar scroll a las secciones
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    
                    const targetId = this.getAttribute('href');
                    if(targetId === '#') return;
                    
                    const targetElement = document.querySelector(targetId);
                    if(targetElement) {
                        window.scrollTo({
                            top: targetElement.offsetTop - 80,
                            behavior: 'smooth'
                        });
                    }
                });
            });
        });

        // Configurar modal de WhatsApp
        function setupWhatsAppModal() {
            const whatsappButton = document.getElementById('whatsappButton');
            const whatsappModal = document.getElementById('whatsappModal');
            const closeModal = document.getElementById('closeModal');

            // Abrir modal al hacer clic en el botón de WhatsApp
            whatsappButton.addEventListener('click', function(e) {
                e.preventDefault();
                whatsappModal.style.display = 'flex';
                document.body.style.overflow = 'hidden';
            });

            // Cerrar modal
            closeModal.addEventListener('click', function() {
                whatsappModal.style.display = 'none';
                document.body.style.overflow = 'auto';
            });

            // Cerrar modal al hacer clic fuera del contenido
            whatsappModal.addEventListener('click', function(e) {
                if (e.target === whatsappModal) {
                    whatsappModal.style.display = 'none';
                    document.body.style.overflow = 'auto';
                }
            });
        }

        // Configurar modal FIFA 2026™
        function setupFIFAModal() {
            const fifaBtn = document.getElementById('fifaBtn');
            const fifaModal = document.getElementById('fifaModal');
            const closeFifa = document.getElementById('closeFifa');

            // Abrir modal al hacer clic en el botón FIFA
            fifaBtn.addEventListener('click', function(e) {
                e.preventDefault();
                fifaModal.style.display = 'block';
                document.body.style.overflow = 'hidden';
            });

            // Cerrar modal
            closeFifa.addEventListener('click', function() {
                fifaModal.style.display = 'none';
                document.body.style.overflow = 'auto';
            });

            // Cerrar modal al hacer clic fuera del contenido
            fifaModal.addEventListener('click', function(e) {
                if (e.target === fifaModal) {
                    fifaModal.style.display = 'none';
                    document.body.style.overflow = 'auto';
                }
            });
        }

        // Inicializar cuadrícula de reseñas
        function initReviewsGrid() {
            const reviewsGrid = document.getElementById('reviewsGrid');
            
            // Agregar solo las 6 reseñas a la cuadrícula
            reviews.forEach((review, index) => {
                const reviewCard = createReviewCardGrid(review, index);
                reviewsGrid.appendChild(reviewCard);
            });
        }

        // Inicializar tarjetas de atracciones
        function initAttractionCards() {
            // Asegurarse de que todas las tarjetas empiecen cerradas
            document.querySelectorAll('.attraction-info').forEach(info => {
                info.style.maxHeight = '0';
                info.style.opacity = '0';
            });
        }

        // Crear tarjeta de reseña para cuadrícula
        function createReviewCardGrid(review, index) {
            const reviewCard = document.createElement('div');
            reviewCard.className = 'review-card-grid';
            reviewCard.dataset.index = index;
            
            // Crear estrellas
            let starsHtml = '';
            for (let i = 0; i < review.stars; i++) {
                starsHtml += '<i class="fas fa-star"></i>';
            }
            
            reviewCard.innerHTML = `
                <div class="reviewer-info-grid">
                    <div class="reviewer-avatar-grid">
                        <img src="${review.avatar}" alt="${review.name}">
                    </div>
                    <div class="reviewer-details-grid">
                        <div class="reviewer-name-grid">${review.name}</div>
                        <div class="stars-grid">${starsHtml}</div>
                        <div class="review-date-grid">${review.date}</div>
                    </div>
                </div>
                <div class="review-text-grid">"${review.text}"</div>
                <div class="review-highlight-grid">${review.highlight}</div>
            `;
            
            return reviewCard;
        }

        // Función para expandir/contraer información de atracciones
        function toggleAttractionInfo(button) {
            const attractionCard = button.closest('.attraction-card');
            const attractionInfo = attractionCard.querySelector('.attraction-info');
            const icon = button.querySelector('i');
            
            // Alternar clase expanded
            attractionInfo.classList.toggle('expanded');
            button.classList.toggle('expanded');
            
            // Cambiar icono
            if (attractionInfo.classList.contains('expanded')) {
                icon.className = 'fas fa-chevron-up';
                // Aplicar estilos de expansión
                attractionInfo.style.maxHeight = '500px';
                attractionInfo.style.opacity = '1';
                attractionInfo.style.marginTop = '1rem';
                
                // Scroll suave para ver más contenido
                setTimeout(() => {
                    attractionCard.scrollIntoView({
                        behavior: 'smooth',
                        block: 'nearest'
                    });
                }, 300);
            } else {
                icon.className = 'fas fa-chevron-down';
                // Aplicar estilos de contracción
                attractionInfo.style.maxHeight = '0';
                attractionInfo.style.opacity = '0';
                attractionInfo.style.marginTop = '0';
            }
        }

        // Función para reservar con animación de fútbol (CIRCULO CENTRADO)
        function reserveWithFIFAAnimation() {
            const fifaModal = document.getElementById('fifaModal');
            const fifaBody = document.querySelector('.fifa-body');
            
            // Crear overlay de animación
            const animationOverlay = document.createElement('div');
            animationOverlay.style.cssText = `
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: linear-gradient(45deg, #0033a0, #ce1126);
                z-index: 2001;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                color: white;
                font-family: 'Inter', sans-serif;
            `;
            
            // Agregar contenido de animación CON SPINNER CENTRADO
            animationOverlay.innerHTML = `
                <div style="text-align: center; padding: 2rem; position: relative; height: 100%; width: 100%;">
                    <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); text-align: center;">
                        <div style="font-size: 4rem; margin-bottom: 1rem;">
                            ⚽ 🏆 🌎
                        </div>
                        <h2 style="font-size: 3rem; margin-bottom: 1rem; text-shadow: 2px 2px 4px rgba(0,0,0,0.5);">
                            FIFA 2026™
                        </h2>
                        <p style="font-size: 1.5rem; margin-bottom: 2rem; max-width: 600px;">
                            ¡Preparando tu experiencia para el Mundial en México!
                        </p>
                        <div class="fifa-spinner"></div>
                        <p style="margin-top: 5rem; font-size: 1.2rem;">
                            Redirigiendo a WhatsApp en 3 segundos...
                        </p>
                    </div>
                </div>
            `;
            
            // Insertar la animación
            document.body.appendChild(animationOverlay);
            
            // Deshabilitar scroll
            document.body.style.overflow = 'hidden';
            
            // Esperar 3 segundos antes de redirigir
            setTimeout(() => {
                // Remover animación
                document.body.removeChild(animationOverlay);
                
                // Restaurar scroll
                document.body.style.overflow = 'auto';
                
                // Cerrar modal FIFA
                fifaModal.style.display = 'none';
                
                // Abrir WhatsApp con mensaje predefinido para FIFA
                const message = encodeURIComponent('¡Hola! Me interesa reservar mi estancia para el Mundial FIFA 2026 en Morada Luna. ¿Podrían ayudarme con más información?');
                window.open(`https://wa.me/5215511406820?text=${message}`, '_blank');
            }, 3000);
        }

        // Slideshow functions
        function startSlideshow() {
            slideInterval = setInterval(nextSlide, 5000);
        }

        function nextSlide() {
            currentSlide = (currentSlide + 1) % slides.length;
            updateSlide();
        }

        function updateSlide() {
            // Remove active class from all slides and indicators
            slides.forEach(slide => slide.classList.remove('active'));
            indicators.forEach(indicator => indicator.classList.remove('active'));
            
            // Add active class to current slide and indicator
            slides[currentSlide].classList.add('active');
            indicators[currentSlide].classList.add('active');
        }

        // Add click events to indicators
        indicators.forEach((indicator, index) => {
            indicator.addEventListener('click', () => {
                currentSlide = index;
                updateSlide();
                // Reset interval
                clearInterval(slideInterval);
                startSlideshow();
            });
        });

        // WhatsApp functions
        function openWhatsApp(propertyName) {
            const message = encodeURIComponent(`¡Hola! Estoy interesado en la propiedad "${propertyName}". ¿Podrían darme más información sobre disponibilidad?`);
            window.open(`https://wa.me/5215511406820?text=${message}`, '_blank');
        }

        // Función para búsqueda en Google con IA
        function searchGoogle(query) {
            const searchUrl = `https://www.google.com/search?q=${encodeURIComponent(query)}`;
            window.open(searchUrl, '_blank');
        }

        function setDefaultDates() {
            const today = new Date();
            const tomorrow = new Date(today);
            tomorrow.setDate(tomorrow.getDate() + 1);
            
            // Formatear fechas para input type="date"
            const formatDate = (date) => date.toISOString().split('T')[0];
            
            document.getElementById('checkin-date').value = formatDate(today);
            document.getElementById('checkout-date').value = formatDate(tomorrow);
            
            currentSearch.checkIn = formatDate(today);
            currentSearch.checkOut = formatDate(tomorrow);
        }

        function setupEventListeners() {
            // Actualizar ubicación
            document.getElementById('location').addEventListener('change', function(e) {
                currentSearch.location = e.target.value;
            });
            
            // Actualizar check-out mínimo cuando cambia check-in
            document.getElementById('checkin-date').addEventListener('change', function(e) {
                currentSearch.checkIn = e.target.value;
                
                // Establecer mínimo para check-out
                const checkoutInput = document.getElementById('checkout-date');
                const minDate = new Date(e.target.value);
                minDate.setDate(minDate.getDate() + 1);
                checkoutInput.min = minDate.toISOString().split('T')[0];
                
                // Si check-out es anterior al nuevo mínimo, resetear
                if (checkoutInput.value && new Date(checkoutInput.value) <= new Date(e.target.value)) {
                    checkoutInput.value = '';
                    currentSearch.checkOut = '';
                }
            });
            
            document.getElementById('checkout-date').addEventListener('change', function(e) {
                currentSearch.checkOut = e.target.value;
            });
            
            document.getElementById('adults').addEventListener('change', function(e) {
                currentSearch.adults = parseInt(e.target.value);
            });
            
            document.getElementById('children').addEventListener('change', function(e) {
                currentSearch.children = parseInt(e.target.value);
            });
        }

        // NUEVA FUNCIÓN DE RESERVA (reemplaza performSearch)
        function performReservation() {
            const location = document.getElementById('location').value;
            const checkIn = document.getElementById('checkin-date').value;
            const checkOut = document.getElementById('checkout-date').value;
            const adults = parseInt(document.getElementById('adults').value);
            const children = parseInt(document.getElementById('children').value);
            const searchBtn = document.getElementById('search-btn');
            
            // Validaciones
            if (!location) {
                alert('Por favor, selecciona una ubicación');
                return;
            }
            
            if (!checkIn || !checkOut) {
                alert('Por favor, selecciona fechas de check-in y check-out');
                return;
            }
            
            if (new Date(checkIn) >= new Date(checkOut)) {
                alert('La fecha de check-out debe ser posterior al check-in');
                return;
            }
            
            // Formatear fecha para mostrar
            function formatDateForDisplay(dateStr) {
                const date = new Date(dateStr);
                return date.toLocaleDateString('es-ES', {
                    day: '2-digit',
                    month: '2-digit',
                    year: 'numeric'
                });
            }
            
            // Crear mensaje para WhatsApp (sin animación de búsqueda)
            let message = `¡Hola! Me gustaría consultar la disponibilidad:\n\n`;
            message += `📍 *Ubicación:* ${location}\n`;
            message += `📅 *Ingreso:* ${formatDateForDisplay(checkIn)}\n`;
            message += `📅 *Salida:* ${formatDateForDisplay(checkOut)}\n`;
            message += `👨‍👩‍👧‍👦 *Personas:* ${adults} ${adults === 1 ? 'Adulto' : 'Adultos'}`;
            
            if (children > 0) {
                message += `\n👶 *Niños:* ${children} ${children === 1 ? 'Niño' : 'Niños'}`;
            }
            
            message += `\n\n¿Podrían decirme si está disponible, y que costo tendría?`;
            
            // Redirigir directamente a WhatsApp
            window.open(`https://wa.me/5215511406820?text=${encodeURIComponent(message)}`, '_blank');
        }

        // CHATBOT FUNCTIONS - NOVABOT MEJORADO
        function initChatbot() {
            const chatbotToggle = document.getElementById('chatbotToggle');
            const chatbotWindow = document.getElementById('chatbotWindow');
            const closeChatbot = document.getElementById('closeChatbot');
            const chatbotSendBtn = document.getElementById('chatbotSendBtn');
            const chatbotInput = document.getElementById('chatbotInput');
            const chatbotMessages = document.getElementById('chatbotMessages');

            // Abrir/cerrar chatbot
            chatbotToggle.addEventListener('click', () => {
                chatbotWindow.style.display = chatbotWindow.style.display === 'flex' ? 'none' : 'flex';
                if (chatbotWindow.style.display === 'flex') {
                    chatbotInput.focus();
                    // Mostrar mensaje de bienvenida si es la primera vez
                    if (chatbotState.step === 0) {
                        showWelcomeMessage();
                    }
                }
            });

            closeChatbot.addEventListener('click', () => {
                chatbotWindow.style.display = 'none';
            });

            // Enviar mensaje al presionar Enter
            chatbotInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    sendChatbotMessage();
                }
            });

            // Enviar mensaje al hacer clic en el botón
            chatbotSendBtn.addEventListener('click', sendChatbotMessage);

            function sendChatbotMessage() {
                const message = chatbotInput.value.trim();
                if (!message) return;

                // Agregar mensaje del usuario
                addMessageToChatbot(message, 'user');
                chatbotInput.value = '';

                // Procesar respuesta del bot
                setTimeout(() => {
                    processChatbotResponse(message);
                }, 500);
            }

            // Mostrar mensaje de bienvenida
            function showWelcomeMessage() {
                const welcomeMessage = `¡Hola! Soy **NOVABOT**, tu asistente especializado en reservas de Morada Luna. Estoy aquí para ayudarte a realizar tu reserva o responder tus preguntas sobre lugares turísticos en CDMX. ¿En qué puedo asistirte hoy?`;
                
                const quickOptions = [
                    "Quiero hacer una reserva",
                    "Ver opciones de propiedades",
                    "Lugares turísticos en CDMX",
                    "Información sobre FIFA 2026"
                ];

                addMessageToChatbot(welcomeMessage, 'bot');
                
                // Agregar opciones rápidas después de un breve delay
                setTimeout(() => {
                    showQuickOptions(quickOptions);
                }, 800);
            }

            function addMessageToChatbot(message, sender) {
                const messageDiv = document.createElement('div');
                messageDiv.className = `message ${sender}-message`;
                messageDiv.textContent = message;
                chatbotMessages.appendChild(messageDiv);
                
                // Scroll al final
                chatbotMessages.scrollTop = chatbotMessages.scrollHeight;
            }

            function showQuickOptions(options) {
                const quickOptionsDiv = document.createElement('div');
                quickOptionsDiv.className = 'quick-options';
                
                options.forEach(option => {
                    const optionBtn = document.createElement('button');
                    optionBtn.className = 'quick-option';
                    optionBtn.textContent = option;
                    optionBtn.addEventListener('click', () => {
                        addMessageToChatbot(option, 'user');
                        processChatbotResponse(option);
                    });
                    quickOptionsDiv.appendChild(optionBtn);
                });
                
                chatbotMessages.appendChild(quickOptionsDiv);
                chatbotMessages.scrollTop = chatbotMessages.scrollHeight;
            }

            function showVisualOptions(options, type) {
                const visualOptionsDiv = document.createElement('div');
                visualOptionsDiv.className = 'visual-options';
                
                options.forEach(option => {
                    const optionBtn = document.createElement('button');
                    optionBtn.className = 'visual-option';
                    optionBtn.textContent = option;
                    optionBtn.addEventListener('click', () => {
                        // Remover selección anterior
                        visualOptionsDiv.querySelectorAll('.visual-option').forEach(btn => {
                            btn.classList.remove('selected');
                        });
                        
                        // Seleccionar opción actual
                        optionBtn.classList.add('selected');
                        
                        // Guardar selección
                        if (type === 'location') {
                            chatbotState.selectedOptions.location = option;
                            chatbotState.reservationData.location = option;
                        }
                        
                        // Enviar mensaje después de breve delay
                        setTimeout(() => {
                            addMessageToChatbot(option, 'user');
                            processChatbotResponse(option);
                        }, 300);
                    });
                    
                    // Seleccionar opción si ya estaba seleccionada antes
                    if (type === 'location' && chatbotState.selectedOptions.location === option) {
                        optionBtn.classList.add('selected');
                    }
                    
                    visualOptionsDiv.appendChild(optionBtn);
                });
                
                chatbotMessages.appendChild(visualOptionsDiv);
                chatbotMessages.scrollTop = chatbotMessages.scrollHeight;
            }

            function showPeopleOptions(type, max = 6) {
                const peopleOptionsDiv = document.createElement('div');
                peopleOptionsDiv.className = 'people-options';
                
                for (let i = (type === 'adults' ? 1 : 0); i <= max; i++) {
                    const optionBtn = document.createElement('button');
                    optionBtn.className = 'people-option';
                    optionBtn.textContent = i;
                    optionBtn.addEventListener('click', () => {
                        // Remover selección anterior
                        peopleOptionsDiv.querySelectorAll('.people-option').forEach(btn => {
                            btn.classList.remove('selected');
                        });
                        
                        // Seleccionar opción actual
                        optionBtn.classList.add('selected');
                        
                        // Guardar selección
                        if (type === 'adults') {
                            chatbotState.selectedOptions.adults = i;
                            chatbotState.reservationData.adults = i.toString();
                        } else if (type === 'children') {
                            chatbotState.selectedOptions.children = i;
                            chatbotState.reservationData.children = i.toString();
                        }
                        
                        // Enviar mensaje después de breve delay
                        setTimeout(() => {
                            addMessageToChatbot(i.toString(), 'user');
                            processChatbotResponse(i.toString());
                        }, 300);
                    });
                    
                    // Seleccionar opción si ya estaba seleccionada antes
                    if (type === 'adults' && chatbotState.selectedOptions.adults === i) {
                        optionBtn.classList.add('selected');
                    } else if (type === 'children' && chatbotState.selectedOptions.children === i) {
                        optionBtn.classList.add('selected');
                    }
                    
                    peopleOptionsDiv.appendChild(optionBtn);
                }
                
                chatbotMessages.appendChild(peopleOptionsDiv);
                chatbotMessages.scrollTop = chatbotMessages.scrollHeight;
            }

            // Función para mostrar propiedades visuales
            function showVisualProperties() {
                const propertiesDiv = document.createElement('div');
                propertiesDiv.className = 'tourist-cards';
                
                visualProperties.forEach(property => {
                    const propertyCard = document.createElement('div');
                    propertyCard.className = 'tourist-card';
                    propertyCard.dataset.id = property.id;
                    
                    propertyCard.innerHTML = `
                        <div class="tourist-icon">
                            <i class="fas fa-home"></i>
                        </div>
                        <div class="tourist-info">
                            <h4>${property.name}</h4>
                            <p>${property.description}</p>
                        </div>
                        <div class="tourist-arrow">
                            <i class="fas fa-arrow-right"></i>
                        </div>
                    `;
                    
                    propertyCard.addEventListener('click', () => {
                        // Seleccionar esta propiedad
                        chatbotState.selectedOptions.location = property.name;
                        chatbotState.reservationData.location = property.name;
                        
                        // Mostrar confirmación
                        addMessageToChatbot(`He seleccionado ${property.name} para tu reserva. ¿Te gustaría proceder con la reserva?`, 'bot');
                        
                        // Mostrar opciones
                        setTimeout(() => {
                            showQuickOptions([
                                "Sí, continuar con la reserva",
                                "Ver otras propiedades",
                                "Volver al inicio"
                            ]);
                        }, 500);
                    });
                    
                    propertiesDiv.appendChild(propertyCard);
                });
                
                chatbotMessages.appendChild(propertiesDiv);
                chatbotMessages.scrollTop = chatbotMessages.scrollHeight;
            }

            // NUEVA FUNCIÓN: Mostrar tarjetas de lugares turísticos
            function showTouristAttractions() {
                const touristCardsDiv = document.createElement('div');
                touristCardsDiv.className = 'tourist-cards';
                
                touristAttractions.forEach(attraction => {
                    const touristCard = document.createElement('div');
                    touristCard.className = 'tourist-card';
                    touristCard.dataset.id = attraction.id;
                    
                    touristCard.innerHTML = `
                        <div class="tourist-icon">${attraction.icon}</div>
                        <div class="tourist-info">
                            <h4>${attraction.name}</h4>
                            <p>${attraction.description}</p>
                        </div>
                        <div class="tourist-arrow">
                            <i class="fas fa-external-link-alt"></i>
                        </div>
                    `;
                    
                    touristCard.addEventListener('click', () => {
                        // Abrir URL directamente al hacer clic
                        window.open(attraction.url, '_blank');
                        
                        // Agregar mensaje de confirmación
                        addMessageToChatbot(`He abierto ${attraction.name} para ti. ¿Necesitas información sobre otro lugar?`, 'bot');
                        
                        // Mostrar opciones nuevamente
                        setTimeout(() => {
                            showQuickOptions([
                                "Ver otro lugar turístico",
                                "Quiero hacer una reserva",
                                "Volver al inicio"
                            ]);
                        }, 1000);
                    });
                    
                    touristCardsDiv.appendChild(touristCard);
                });
                
                chatbotMessages.appendChild(touristCardsDiv);
                chatbotMessages.scrollTop = chatbotMessages.scrollHeight;
            }

            function showTypingIndicator() {
                const typingDiv = document.createElement('div');
                typingDiv.className = 'chatbot-typing';
                typingDiv.innerHTML = `
                    <div class="typing-dot"></div>
                    <div class="typing-dot"></div>
                    <div class="typing-dot"></div>
                `;
                chatbotMessages.appendChild(typingDiv);
                chatbotMessages.scrollTop = chatbotMessages.scrollHeight;
                
                return typingDiv;
            }

            function removeTypingIndicator(typingDiv) {
                if (typingDiv && typingDiv.parentNode) {
                    typingDiv.parentNode.removeChild(typingDiv);
                }
            }

            // Función para mostrar calendario
            function showCalendarPopup(isCheckIn = true) {
                const calendarPopup = document.createElement('div');
                calendarPopup.className = 'calendar-popup';
                
                const today = new Date();
                const currentMonth = today.getMonth();
                const currentYear = today.getFullYear();
                
                let currentDate = new Date(currentYear, currentMonth, 1);
                
                function renderCalendar() {
                    const monthNames = ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio",
                                       "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"];
                    
                    calendarPopup.innerHTML = `
                        <div class="calendar-header">
                            <button class="calendar-nav" onclick="prevMonth()">&lt;</button>
                            <h4>${monthNames[currentDate.getMonth()]} ${currentDate.getFullYear()}</h4>
                            <button class="calendar-nav" onclick="nextMonth()">&gt;</button>
                        </div>
                        <div class="calendar-grid">
                            <div>Dom</div><div>Lun</div><div>Mar</div><div>Mié</div><div>Jue</div><div>Vie</div><div>Sáb</div>
                        </div>
                    `;
                    
                    const calendarGrid = calendarPopup.querySelector('.calendar-grid');
                    
                    // Obtener primer día del mes
                    const firstDay = new Date(currentDate.getFullYear(), currentDate.getMonth(), 1);
                    const startingDay = firstDay.getDay();
                    
                    // Obtener último día del mes
                    const lastDay = new Date(currentDate.getFullYear(), currentDate.getMonth() + 1, 0);
                    const daysInMonth = lastDay.getDate();
                    
                    // Agregar días vacíos al inicio
                    for (let i = 0; i < startingDay; i++) {
                        const emptyDiv = document.createElement('div');
                        calendarGrid.appendChild(emptyDiv);
                    }
                    
                    // Agregar días del mes
                    for (let day = 1; day <= daysInMonth; day++) {
                        const dayDiv = document.createElement('div');
                        dayDiv.className = 'calendar-day';
                        dayDiv.textContent = day;
                        
                        const dateStr = `${currentDate.getFullYear()}-${String(currentDate.getMonth() + 1).padStart(2, '0')}-${String(day).padStart(2, '0')}`;
                        
                        dayDiv.addEventListener('click', () => {
                            if (isCheckIn) {
                                chatbotState.reservationData.checkIn = dateStr;
                                addMessageToChatbot(dateStr, 'user');
                                calendarPopup.remove();
                                chatbotState.step = 6;
                                setTimeout(() => {
                                    addMessageToChatbot(`Fecha de entrada: ${formatDateForDisplay(dateStr)}\n\n¿Y la fecha de salida?`, 'bot');
                                    showCalendarPopup(false);
                                }, 500);
                            } else {
                                chatbotState.reservationData.checkOut = dateStr;
                                addMessageToChatbot(dateStr, 'user');
                                calendarPopup.remove();
                                chatbotState.step = 7;
                                
                                // Resumen de la reserva
                                const summary = `¡Perfecto! Aquí está el resumen de tu solicitud de reserva:\n\n` +
                                              `👤 *Nombre:* ${chatbotState.reservationData.firstName} ${chatbotState.reservationData.lastName}\n` +
                                              `📍 *Ubicación:* ${chatbotState.reservationData.location}\n` +
                                              `👨‍👩‍👧‍👦 *Personas:* ${chatbotState.reservationData.adults} Adultos, ${chatbotState.reservationData.children} Niños\n` +
                                              `📅 *Entrada:* ${formatDateForDisplay(chatbotState.reservationData.checkIn)}\n` +
                                              `📅 *Salida:* ${formatDateForDisplay(chatbotState.reservationData.checkOut)}\n\n` +
                                              `¿Es correcta esta información?`;
                                
                                setTimeout(() => {
                                    addMessageToChatbot(summary, 'bot');
                                    showQuickOptions(["Sí, es correcta", "No, quiero corregir algo"]);
                                }, 800);
                            }
                        });
                        
                        calendarGrid.appendChild(dayDiv);
                    }
                }
                
                function prevMonth() {
                    currentDate.setMonth(currentDate.getMonth() - 1);
                    renderCalendar();
                }
                
                function nextMonth() {
                    currentDate.setMonth(currentDate.getMonth() + 1);
                    renderCalendar();
                }
                
                // Agregar funciones al scope global temporalmente
                window.prevMonth = prevMonth;
                window.nextMonth = nextMonth;
                
                renderCalendar();
                
                // Posicionar y mostrar el calendario
                calendarPopup.style.bottom = '70px';
                calendarPopup.style.left = '10px';
                chatbotMessages.appendChild(calendarPopup);
            }

            // Función auxiliar para formatear fechas
            function formatDateForDisplay(dateStr) {
                const date = new Date(dateStr);
                return date.toLocaleDateString('es-ES', {
                    day: '2-digit',
                    month: '2-digit',
                    year: 'numeric'
                });
            }

            // Procesar respuesta del chatbot - MEJORADO
            function processChatbotResponse(userMessage) {
                const typingDiv = showTypingIndicator();
                
                setTimeout(() => {
                    removeTypingIndicator(typingDiv);
                    
                    const lowerMessage = userMessage.toLowerCase();
                    
                    // Proceso de reserva paso a paso
                    switch (chatbotState.step) {
                        case 0: // Paso 0: Bienvenida
                            if (lowerMessage.includes('reserva') || lowerMessage.includes('quiero hacer')) {
                                chatbotState.step = 1;
                                chatbotState.mode = 'reservation';
                                addMessageToChatbot('¡Excelente! Para comenzar con tu reserva, necesito algunos datos. ¿Cuál es tu nombre?', 'bot');
                            } else if (lowerMessage.includes('propiedad') || lowerMessage.includes('opciones')) {
                                chatbotState.mode = 'properties';
                                addMessageToChatbot('Tenemos 4 propiedades disponibles. Haz clic en cualquiera para seleccionarla:', 'bot');
                                setTimeout(() => {
                                    showVisualProperties();
                                }, 500);
                            } else if (lowerMessage.includes('lugares') || lowerMessage.includes('turísticos') || lowerMessage.includes('cdmx')) {
                                chatbotState.mode = 'tourism';
                                addMessageToChatbot('¡Excelente! Estos son los principales lugares turísticos de CDMX. Haz clic en cualquiera para abrir más información:', 'bot');
                                setTimeout(() => {
                                    showTouristAttractions();
                                }, 500);
                            } else if (lowerMessage.includes('fifa') || lowerMessage.includes('mundial')) {
                                // Cerrar el chatbot
                                chatbotWindow.style.display = 'none';
                                
                                // Abrir directamente el modal FIFA
                                setTimeout(() => {
                                    document.getElementById('fifaModal').style.display = 'block';
                                    document.body.style.overflow = 'hidden';
                                }, 300);
                            } else {
                                addMessageToChatbot('Para ayudarte mejor, por favor selecciona una de las opciones o dime qué necesitas específicamente.', 'bot');
                                showQuickOptions([
                                    "Quiero hacer una reserva",
                                    "Ver opciones de propiedades",
                                    "Lugares turísticos en CDMX",
                                    "Información sobre FIFA 2026"
                                ]);
                            }
                            break;
                            
                        case 1: // Paso 1: Nombre (TEXTO)
                            chatbotState.reservationData.firstName = userMessage;
                            chatbotState.step = 1.5;
                            addMessageToChatbot(`Mucho gusto ${userMessage}. ¿Cuál es tu apellido?`, 'bot');
                            break;
                            
                        case 1.5: // Paso 1.5: Apellido (TEXTO)
                            chatbotState.reservationData.lastName = userMessage;
                            chatbotState.step = 2;
                            addMessageToChatbot(`Perfecto, ${chatbotState.reservationData.firstName} ${chatbotState.reservationData.lastName}. ¿En qué ubicación te gustaría realizar tu reserva?`, 'bot');
                            setTimeout(() => {
                                showVisualOptions(["Roma Norte", "Coyoacán", "Polanco", "Condesa"], 'location');
                            }, 500);
                            break;
                            
                        case 2: // Paso 2: Ubicación (VISUAL)
                            if (chatbotState.reservationData.location) {
                                chatbotState.step = 3;
                                addMessageToChatbot(`Perfecto, ${chatbotState.reservationData.location}. Ahora necesito saber el número de personas:\n\n¿Cuántos adultos serán?`, 'bot');
                                setTimeout(() => {
                                    showPeopleOptions('adults', 6);
                                }, 500);
                            } else {
                                addMessageToChatbot('Por favor, selecciona una ubicación de las opciones visuales.', 'bot');
                            }
                            break;
                            
                        case 3: // Paso 3: Adultos (VISUAL)
                            if (chatbotState.reservationData.adults) {
                                chatbotState.step = 4;
                                addMessageToChatbot(`Gracias. ¿Y cuántos niños (si aplica)?`, 'bot');
                                setTimeout(() => {
                                    showPeopleOptions('children', 3);
                                }, 500);
                            } else {
                                addMessageToChatbot('Por favor, selecciona el número de adultos usando las opciones visuales.', 'bot');
                            }
                            break;
                            
                        case 4: // Paso 4: Niños (VISUAL)
                            chatbotState.reservationData.children = userMessage;
                            chatbotState.step = 5;
                            addMessageToChatbot(`Excelente. Ahora necesito las fechas de tu estadía.\n\n¿Cuál sería tu fecha de entrada? Haz clic en el calendario que aparecerá a continuación:`, 'bot');
                            // Mostrar calendario para fecha de entrada
                            setTimeout(() => {
                                showCalendarPopup(true);
                            }, 800);
                            break;
                            
                        case 7: // Paso 7: Confirmación
                            if (lowerMessage.includes('sí') || lowerMessage.includes('correcta')) {
                                addMessageToChatbot('¡Excelente! Ahora te redirigiré a WhatsApp para que completes tu reserva con nuestro equipo. Ellos te confirmarán la disponibilidad y el costo exacto.', 'bot');
                                
                                // Crear mensaje para WhatsApp con el formato solicitado
                                let whatsappMessage = `¡Hola! Me gustaría consultar la disponibilidad:\n\n`;
                                whatsappMessage += `📍 *Ubicación:* ${chatbotState.reservationData.location}\n`;
                                whatsappMessage += `📅 *Ingreso:* ${formatDateForDisplay(chatbotState.reservationData.checkIn)}\n`;
                                whatsappMessage += `📅 *Salida:* ${formatDateForDisplay(chatbotState.reservationData.checkOut)}\n`;
                                whatsappMessage += `👨‍👩‍👧‍👦 *Personas:* ${chatbotState.reservationData.adults} Adultos`;
                                
                                if (parseInt(chatbotState.reservationData.children) > 0) {
                                    whatsappMessage += `, ${chatbotState.reservationData.children} Niños`;
                                }
                                
                                whatsappMessage += `\n\n¿Podrían decirme si está disponible, y que costo tendría?\n\n*Solicitado por:* ${chatbotState.reservationData.firstName} ${chatbotState.reservationData.lastName}`;
                                
                                // Esperar 2 segundos antes de redirigir
                                setTimeout(() => {
                                    window.open(`https://wa.me/5215511406820?text=${encodeURIComponent(whatsappMessage)}`, '_blank');
                                    chatbotWindow.style.display = 'none';
                                    
                                    // Resetear el estado del chatbot automáticamente
                                    resetChatbotState();
                                }, 2000);
                            } else {
                                addMessageToChatbot('¿Qué dato te gustaría corregir?', 'bot');
                                showQuickOptions([
                                    "Nombre",
                                    "Apellido",
                                    "Ubicación",
                                    "Número de personas",
                                    "Fechas"
                                ]);
                            }
                            break;
                            
                        default:
                            // Si el usuario quiere corregir algo
                            if (lowerMessage.includes('nombre')) {
                                chatbotState.step = 1;
                                addMessageToChatbot('Por favor, dime tu nombre nuevamente:', 'bot');
                            } else if (lowerMessage.includes('apellido')) {
                                chatbotState.step = 1.5;
                                addMessageToChatbot('Por favor, dime tu apellido nuevamente:', 'bot');
                            } else if (lowerMessage.includes('ubicación')) {
                                chatbotState.step = 2;
                                chatbotState.reservationData.location = '';
                                chatbotState.selectedOptions.location = null;
                                addMessageToChatbot('¿En qué ubicación te gustaría realizar tu reserva?', 'bot');
                                setTimeout(() => {
                                    showVisualOptions(["Roma Norte", "Coyoacán", "Polanco", "Condesa"], 'location');
                                }, 500);
                            } else if (lowerMessage.includes('personas') || lowerMessage.includes('adultos') || lowerMessage.includes('niños')) {
                                chatbotState.step = 3;
                                chatbotState.reservationData.adults = '';
                                chatbotState.reservationData.children = '';
                                chatbotState.selectedOptions.adults = null;
                                chatbotState.selectedOptions.children = null;
                                addMessageToChatbot('Vamos a seleccionar el número de personas nuevamente. ¿Cuántos adultos serán?', 'bot');
                                setTimeout(() => {
                                    showPeopleOptions('adults', 6);
                                }, 500);
                            } else if (lowerMessage.includes('fecha')) {
                                chatbotState.step = 5;
                                chatbotState.reservationData.checkIn = '';
                                chatbotState.reservationData.checkOut = '';
                                addMessageToChatbot('Vamos a seleccionar las fechas nuevamente. ¿Cuál sería tu fecha de entrada?', 'bot');
                                setTimeout(() => {
                                    showCalendarPopup(true);
                                }, 800);
                            } else if (lowerMessage.includes('otro lugar') || lowerMessage.includes('ver otro')) {
                                // Volver a mostrar lugares turísticos
                                addMessageToChatbot('Estos son los principales lugares turísticos de CDMX:', 'bot');
                                setTimeout(() => {
                                    showTouristAttractions();
                                }, 500);
                            } else if (lowerMessage.includes('otras propiedades') || lowerMessage.includes('ver otras')) {
                                // Volver a mostrar propiedades
                                addMessageToChatbot('Estas son nuestras propiedades disponibles:', 'bot');
                                setTimeout(() => {
                                    showVisualProperties();
                                }, 500);
                            } else if (lowerMessage.includes('volver') || lowerMessage.includes('inicio')) {
                                // Volver al inicio
                                resetChatbotState();
                                addMessageToChatbot('¿En qué más puedo ayudarte?', 'bot');
                                showQuickOptions([
                                    "Quiero hacer una reserva",
                                    "Ver opciones de propiedades",
                                    "Lugares turísticos en CDMX",
                                    "Información sobre FIFA 2026"
                                ]);
                            } else {
                                addMessageToChatbot('No entiendo. Por favor, selecciona una de las opciones o dime específicamente qué quieres corregir.', 'bot');
                            }
                            break;
                    }
                }, 1000);
            }

            // Función para resetear el estado del chatbot
            function resetChatbotState() {
                chatbotState = {
                    step: 0,
                    mode: 'welcome',
                    reservationData: {
                        firstName: '',
                        lastName: '',
                        location: '',
                        adults: '',
                        children: '',
                        checkIn: '',
                        checkOut: ''
                    },
                    selectedOptions: {
                        location: null,
                        adults: null,
                        children: null
                    }
                };
            }
        }
    </script>
</body>
</html>
